{
  "compilerOptions": {
    "lib": ["es2022"],
    "target": "es2022",
    "module": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*"]
}
